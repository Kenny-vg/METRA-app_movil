<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvDetalleNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingBottom="8dp"/>
    <TextView
        android:id="@+id/tvDetalleHora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hora"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingBottom="8dp"/>
    <TextView
        android:id="@+id/tvDetallePersonas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personas:"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/tvDetalleZona"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zona"
        android:paddingBottom="8dp"/>
    <TextView
        android:id="@+id/tvDetalleMesa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mesa: 1"
        android:paddingBottom="8dp"/>


    <TextView
        android:id="@+id/tvDetalleComentarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comentarios"
        android:paddingBottom="16dp"/>

    <Spinner
        android:id="@+id/spAccion"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:background="@android:drawable/btn_dropdown"
        android:padding="8dp"/>

    <Button
        android:id="@+id/btnAplicar"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:text="Asignar / Liberar"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="15sp"
        android:backgroundTint="@android:color/holo_blue_dark"/>

</LinearLayout>
